#! /usr/bin/env bash
set -e

docker rm -f todo-list-node

docker run \
    --rm \
    -i \
    -u "$(id -u):$(id -g)" \
    --env SSH_AUTH_SOCK=/tmp/agent.sock \
    -v /etc/passwd:/etc/passwd:ro \
    -v /etc/group:/etc/group:ro \
    -v "$SSH_AUTH_SOCK":/tmp/agent.sock \
    -v "$HOME":"$HOME" \
    -v "$(pwd)":/app \
    -w /app \
    --name todo-list-node \
    node:8.9-alpine "$@"